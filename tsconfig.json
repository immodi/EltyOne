{
  "compilerOptions": {
    /* File structure */
    "rootDir": "./",
    "outDir": "./dist",

    /* Browser-compatible output */
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler", 
    "lib": ["esnext", "dom"],

    /* Output extras */
    "sourceMap": true,

    /* Type checking */
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Performance & interop */
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  }
}
